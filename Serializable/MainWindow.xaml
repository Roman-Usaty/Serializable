<Window x:Class="Serializable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serializable"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <Button Content="Файл для сериализации" HorizontalAlignment="Left" Margin="47,10,0,0" VerticalAlignment="Top" Height="31" Width="140" Click="ButtonSelectFile_Click"/>
        <Button Content="Сериализовать" HorizontalAlignment="Left" Margin="378,10,0,0" VerticalAlignment="Top" Height="31" Width="139" Click="ButtonSerialize_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="204,10,0,0" VerticalAlignment="Top" Width="147" Height="31" SelectionChanged="Serializable_SelectionChanged">
            <TextBlock Selector.IsSelected="True">JSON</TextBlock>
            <TextBlock>XML</TextBlock>
            <TextBlock>EXCEL</TextBlock>
        </ComboBox>

    </Grid>
</Window>
